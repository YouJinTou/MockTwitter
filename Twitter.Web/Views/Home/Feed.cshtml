@model PagedList.IPagedList<Twitter.Web.Models.ViewModels.TweetViewModel>
@using PagedList.Mvc;

@{ 
    ViewBag.Title = "Feed";
}

<section class="tweets-container">
    @{
        if (Model.Count == 0)
        {
            <div>
                <h3>Follow someone to get the latest from them.</h3>
            </div>
        }
        @Html.DisplayForModel()

        @Html.PagedListPager(Model, page => Url.Action("Feed", new { page }));
    }
</section>